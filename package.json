{
  "name": "backend",
  "version": "1.0.0",
  "description": "API backend do projeto Kavita com testes automatizados",
  "main": "server.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "build": "node -e \"process.env.NODE_ENV='test'; require('./server'); console.log('âœ… build smoke ok')\"",
    "test": "cross-env NODE_ENV=test NODE_PATH=./vendor node ./node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "cross-env NODE_ENV=test NODE_PATH=./vendor node ./node_modules/jest/bin/jest.js --watch",
    "test:cov": "cross-env NODE_ENV=test NODE_PATH=./vendor node ./node_modules/jest/bin/jest.js --coverage",
    "test:ci": "cross-env NODE_ENV=test NODE_PATH=./vendor node ./node_modules/jest/bin/jest.js --ci --runInBand --coverage",
    "test:int": "cross-env NODE_ENV=test NODE_PATH=./vendor node ./node_modules/jest/bin/jest.js teste/integration --runInBand",
    "test:int:cov": "cross-env NODE_ENV=test NODE_PATH=./vendor node ./node_modules/jest/bin/jest.js teste/integration --coverage --runInBand",
    "test:unit": "cross-env NODE_ENV=test NODE_PATH=./vendor node ./node_modules/jest/bin/jest.js teste/unit --runInBand",
    "test:unit:cov": "cross-env NODE_ENV=test NODE_PATH=./vendor node ./node_modules/jest/bin/jest.js teste/unit --coverage --runInBand",
    "worker:abandoned-carts": "node jobs/abandonedCartsWorker.js"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.12.0",
    "nodemailer": "^6.10.0",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "typescript": "^5.7.3"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/unit/**/*.test.js",
      "**/integration/**/*.test.js"
    ],
    "setupFiles": [
      "<rootDir>/teste/setup/env.setup.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/teste/setup/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^browserslist$": "<rootDir>/teste/mocks/browserslist.mock.js"
    },
    "collectCoverageFrom": [
      "routes/**/*.js",
      "controllers/**/*.js",
      "services/**/*.js",
      "server.js"
    ]
  },
  "keywords": []
}
