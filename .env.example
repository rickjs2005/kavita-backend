# ======================================
# AMBIENTE
# ======================================

NODE_ENV=development
PORT=5000

# ======================================
# BANCO DE DADOS
# ======================================

DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_NAME=kavita

# ======================================
# AUTENTICAÇÃO (JWT)
# ======================================

JWT_SECRET=trocar_por_um_secret_seguro
JWT_EXPIRES_IN=1d

# ======================================
# EMAIL / SMTP
# ======================================

SMTP_HOST=smtp.seuprovedor.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu_email
SMTP_PASS=sua_senha
SMTP_FROM="Kavita <no-reply@seudominio.com>"

# ======================================
# MERCADO PAGO
# ======================================

# Use token de sandbox em desenvolvimento
MP_ACCESS_TOKEN=trocar_por_access_token

# ======================================
# URLs DA APLICAÇÃO
# ======================================

# URL do frontend (usada em redirects, CORS etc)
APP_URL=http://localhost:3000

# URL pública do backend
BACKEND_URL=http://localhost:5000

# URL pública do site (caso diferente do APP_URL)
PUBLIC_SITE_URL=http://localhost:3000

# ======================================
# CORS
# ======================================

# Separe múltiplas origens por vírgula
ALLOWED_ORIGINS=http://localhost:3000
CORS_CREDENTIALS=true
CORS_EXPOSE_HEADERS=Location,Link,ETag,Request-Id

# ======================================
# TABELAS (customização opcional)
# ======================================

PRODUCTS_TABLE=products
PRODUCT_IMAGES_TABLE=product_images
PRODUCT_CATEGORY_COL=category_id
PRODUCT_IMAGE_COL=image

# ======================================
# LOGS / SEGURANÇA
# ======================================

LOG_LEVEL=info
LOG_PRETTY=true
LOG_REQUEST_BODY=false
ENABLE_HELMET=true

# ======================================
# NOTIFICAÇÕES / WORKERS
# ======================================

DISABLE_NOTIFICATIONS=false
ABANDON_NOTIF_WORKER_INTERVAL_SECONDS=10
ABANDON_CART_WORKER_INTERVAL_MS=60000
ABANDON_CART_WORKER_BATCH_LIMIT=50
ABANDON_CART_HOURS=24

# ======================================
# COTAÇÕES
# ======================================

COTACOES_PROVIDER_ENABLED=true